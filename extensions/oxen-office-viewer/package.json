{
  "name": "oxen-office-viewer",
  "displayName": "Oxen Office Viewer",
  "description": "View PPTX, PPT, DOCX, DOC, XLSX, and XLS files directly in VS Code",
  "version": "0.1.0",
  "publisher": "oxen",
  "license": "MIT",
  "type": "module",
  "engines": {
    "vscode": "^1.85.0"
  },
  "main": "./dist/extension.js",
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "contributes": {
    "customEditors": [
      {
        "viewType": "oxen.pptxViewer",
        "displayName": "PPTX Viewer",
        "selector": [
          { "filenamePattern": "*.pptx" },
          { "filenamePattern": "*.ppt" }
        ],
        "priority": "default"
      },
      {
        "viewType": "oxen.docxViewer",
        "displayName": "DOCX Viewer",
        "selector": [
          { "filenamePattern": "*.docx" },
          { "filenamePattern": "*.doc" }
        ],
        "priority": "default"
      },
      {
        "viewType": "oxen.xlsxViewer",
        "displayName": "XLSX Viewer",
        "selector": [
          { "filenamePattern": "*.xlsx" },
          { "filenamePattern": "*.xls" }
        ],
        "priority": "default"
      }
    ]
  },
  "scripts": {
    "build": "bun run build:extension",
    "build:extension": "bun build src/extension.ts --target node --outdir dist --external vscode",
    "package": "vsce package --no-dependencies",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint src"
  },
  "dependencies": {
    "@oxen-office/pptx": "workspace:*",
    "@oxen-office/ppt": "workspace:*",
    "@oxen-office/docx": "workspace:*",
    "@oxen-office/doc": "workspace:*",
    "@oxen-office/xlsx": "workspace:*",
    "@oxen-office/xls": "workspace:*",
    "@oxen-renderer/pptx": "workspace:*",
    "@oxen/zip": "workspace:*"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.2.2"
  }
}
