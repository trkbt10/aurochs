              }
            ]
          },
          {
            "type": "rectangle",
            "x": 50,
            "y": 400,
            "width": 500,
            "height": 80,
            "lineColor": "D1D5DB",
            "lineWidth": 1,
            "text": [
              {
                "runs": [{ "text": "Shape with only border, no fill", "fontSize": 16 }],
                "alignment": "center"
              }
            ]
          }
        ]
      }
    ]
  },
  "expected": {
    "slides": [
      {
        "slideNumber": 1,
        "shapes": [
          { "index": -5, "type": "sp", "text": "Simple text in rectangle" },
          { "index": -4, "type": "sp", "text": "Title\nSubtitle text below the title" },
          { "index": -3, "type": "sp", "text": "Ellipse text" },
          { "index": -2, "type": "sp", "text": "Formatted text in round rect" },
          { "index": -1, "type": "sp", "text": "Shape with only border, no fill" }
