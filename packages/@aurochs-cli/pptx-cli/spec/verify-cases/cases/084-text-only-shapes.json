        "addShapes": [
          {
            "type": "rectangle",
            "x": 50,
            "y": 50,
            "width": 400,
            "height": 60,
            "text": "Simple text in rectangle"
          },
          {
            "type": "rectangle",
            "x": 50,
            "y": 130,
            "width": 600,
            "height": 100,
            "text": [
              {
                "runs": [{ "text": "Title", "fontSize": 28, "bold": true }],
