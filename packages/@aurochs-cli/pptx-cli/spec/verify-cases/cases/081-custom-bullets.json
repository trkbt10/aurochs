              {
                "runs": [{ "text": "Pending task", "fontSize": 16, "color": "6B7280" }],
                "bullet": { "type": "char", "char": "○" }
              },
              {
                "runs": [{ "text": "Important task", "fontSize": 16, "color": "EF4444" }],
                "bullet": { "type": "char", "char": "!" }
              }
            ]
          }
        ]
      }
    ]
