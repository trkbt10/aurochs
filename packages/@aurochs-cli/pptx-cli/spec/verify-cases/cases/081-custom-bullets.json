    "slides": [
      {
        "slideNumber": 1,
        "shapes": [
          { "index": -3, "type": "sp", "text": "Standard Bullets\nDefault bullet point\nDash bullet\nArrow bullet\nCheck bullet" },
          { "index": -2, "type": "sp", "text": "Symbol Bullets\nStar bullet\nDiamond bullet\nSquare bullet\nCircle bullet" },
          { "index": -1, "type": "sp", "text": "Task List Style\nCompleted task\nIn progress task\nPending task\nImportant task" }
