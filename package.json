{
  "name": "aurochs",
  "version": "0.1.0",
  "type": "module",
  "packageManager": "bun@1.2.21",
  "sideEffects": false,
  "bin": {
    "aurochs": "./dist/aurochs-cli"
  },
  "files": [
    "dist"
  ],
  "workspaces": [
    "packages/@aurochs/*",
    "packages/@aurochs-office/*",
    "packages/@aurochs-converters/*",
    "packages/@aurochs-renderer/*",
    "packages/@aurochs-ui/*",
    "packages/@aurochs-cli/*",
    "packages/@aurochs-builder/*",
    "packages/@aurochs-build/*",
    "packages/@aurochs-mcp/*",
    "extensions/*"
  ],
  "scripts": {
    "build": "vite build --config pages/vite.config.ts && bun build packages/@aurochs-cli/cli/src/cli.ts --target bun --outfile dist/aurochs-cli",
    "clean": "rimraf dist",
    "test": "vitest --run",
    "typecheck": "tsc -p tsconfig.json --noEmit --rootDir .",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build:pages": "vite build --config pages/vite.config.ts",
    "dev:pages": "vite --config pages/vite.config.ts"
  },
  "devDependencies": {
    "@fontsource-variable/inter": "^5.2.8",
    "@fontsource/inter": "^5.2.8",
    "@resvg/resvg-js": "^2.6.2",
    "@testing-library/react": "^16.3.1",
    "@types/earcut": "^3.0.0",
    "@types/jpeg-js": "^0.3.7",
    "@types/node": "^24.3.1",
    "@types/opentype.js": "^1.3.9",
    "@types/pdfkit": "^0.17.4",
    "@types/pngjs": "^6.0.5",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vitejs/plugin-react": "^4.5.2",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^9.1.2",
    "earcut": "^3.0.2",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^56.1.2",
    "jpeg-js": "^0.4.4",
    "jsdom": "^27.4.0",
    "pdfkit": "^0.17.2",
    "pixelmatch": "^7.1.0",
    "prettier": "^3.6.2",
    "puppeteer": "^24.34.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0",
    "vite": "^7.1.5",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "fflate": "^0.8.2",
    "hono": "^4.11.1",
    "lucide-react": "^0.562.0",
    "opentype.js": "^1.3.4",
    "pngjs": "^7.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-panel-layout": "^0.6.1",
    "react-router-dom": "^7.6.1",
    "zustand": "^5.0.5"
  }
}
